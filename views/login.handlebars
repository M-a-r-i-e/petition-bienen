<h2>Sign In</h2>

<form method="POST" action="/login">

    {{#if error}}
        <div class="error">{{error}}</div>
    {{/if}}


    <input id="email" value="{{email}}" name="email" type="email" placeholder="YOUR EMAIL">

    <input id="password" value="{{password}}" name="password" type="password" placeholder="ENTER YOUR PASSWORD">

     <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <button type="submit">LOGIN</button>


</form>

